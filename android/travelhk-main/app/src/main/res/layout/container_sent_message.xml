        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageSent"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_margin="5dp"
